<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
    
    <hibernate-mapping> 
    <class name="com.fuatkara.StudentInfo" table="Student_INFO">
    	
    	<!-- Foreign Key Yapma -->
    	<id name="studentId" type="java.lang.Integer">
    		<column name="Student_Id"/>
    		<generator class="foreign">
    			<param>Student</param>
    		</generator>
    	</id>
    	
    	<property name="adres" type="java.lang.String">
    		<column name="Adres" not-null="true" length="50"/>
    	</property>
    	
    	<property name="mail" type="java.lang.String">
    		<column name="Mail" not-null="true" length="50"/>
    	</property>
    	
    	<!-- cascade=save demek yani yukaridaki bilgiler kaydedilirken, buda kendini kayit ettiriyor.Yani birbirne baglaniyor.
    	cascade="save"  veya cascade="save-update" olarakta yazabiliriz, hem kaydederken hem de guncellerken. -->
    	<one-to-one name="studentInfo"  
    		class="com.fuatkara.StudentInfo" 
    		constrained="true">
    	</one-to-one>
    
    </class>
	</hibernate-mapping>
	
	
	
	
	
	
	
	
	
	